<pyvcp>
<!-- Status and errors of 2FOC boards -->

<tabs>
<names> ["X","Y","Z"]</names>

<hbox>
    <labelframe text="Status">

        <hbox>
	        <led>
	            <halpin>"x.status.speed"</halpin>
	            <size>20</size>
	            <on_color>"green"</on_color>
	            <off_color>"black"</off_color>
	        </led> <label> <text>"  Speed control"</text> <justify>"right"</justify> </label>
        </hbox>

        <hbox>
	        <led>
	            <halpin>"x.status.ra"</halpin>
	            <size>20</size>
	            <on_color>"green"</on_color>
	            <off_color>"black"</off_color>
	        </led> <label> <text>"  Rotor aligned"</text> <justify>"right"</justify> </label>
        </hbox>

        <hbox>
	        <led>
	            <halpin>"x.status.switchedon"</halpin>
	            <size>20</size>
	            <on_color>"green"</on_color>
	            <off_color>"black"</off_color>
	        </led> <label> <text>"  Switched on"</text> <justify>"right"</justify> </label>
        </hbox>

        <hbox>
	        <led>
	            <halpin>"x.status.operationenabled"</halpin>
	            <size>20</size>
	            <on_color>"green"</on_color>
	            <off_color>"black"</off_color>
	        </led> <label> <text>"  Operation enabled  "</text> <justify>"right"</justify> </label>
        </hbox>

        <hbox>
	        <led>
	            <halpin>"x.status.shutteddown"</halpin>
	            <size>20</size>
	            <on_color>"green"</on_color>
	            <off_color>"black"</off_color>
	        </led> <label> <text>"  Shutted down"</text> <justify>"right"</justify> </label>
        </hbox>

    </labelframe>

    <labelframe text="Errors">
        <hbox>
	        <led>
	            <halpin>"x.error.overcurrent"</halpin>
	            <size>20</size>
	            <on_color>"red"</on_color>
	            <off_color>"black"</off_color>
	        </led>
	        <label> <text>"  Overcurrent"</text> <justify>"right"</justify> </label>
        </hbox>

        <hbox>
	        <led>
	            <halpin>"x.error.overvelocity"</halpin>
	            <size>20</size>
	            <on_color>"red"</on_color>
	            <off_color>"black"</off_color>
	        </led>
	        <label> <text>"  Overvelocity"</text> <justify>"right"</justify> </label>
        </hbox>

        <hbox>
	        <led>
	            <halpin>"x.error.overvvoltage"</halpin>
	            <size>20</size>
	            <on_color>"red"</on_color>
	            <off_color>"black"</off_color>
	        </led>
	        <label> <text>"  Overvoltage"</text> <justify>"right"</justify> </label>
        </hbox>

        <hbox>
	        <led>
	            <halpin>"x.error.undervoltage"</halpin>
	            <size>20</size>
	            <on_color>"red"</on_color>
	            <off_color>"black"</off_color>
	        </led>
	        <label> <text>"  Undervoltage  "</text> <justify>"right"</justify> </label>
        </hbox>

        <hbox>
	        <led>
	            <halpin>"x.error.external"</halpin>
	            <size>20</size>
	            <on_color>"red"</on_color>
	            <off_color>"black"</off_color>
	        </led>
	        <label> <text>"  External"</text> <justify>"right"</justify> </label>
        </hbox>

    </labelframe>
</hbox>

    <vbox> <label> <text>"Y status/error"</text> </label> 
    </vbox>

    <vbox> <label> <text>"Z status/error"</text> </label> 
    </vbox>
</tabs>

</pyvcp>
